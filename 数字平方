class Solution {
public:
    double myPow(double x, int n) {
        if (n == 0) {
            return 1;
        }
        int m = n > 0 ? n : -1 * n;
        double res = 1;
        for (int i = 0; i < m; ++i) {
            res *= x;
        }
        if (n > 0) {
            return res;
        }
        return 1 / res;
    }
};
